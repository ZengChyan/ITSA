#include <iostream>
#include <stdio.h>
#include <cmath>
#include <algorithm>
#include <string>

using namespace std;

int main(){

    int N, sum = 0;
    while(cin >> N){  
        for(int i = 1; i <= N; i++){  
            sum = sum + i;  
        }  
        for(int i = 1; i <= N; i++){  
            if(i == 1)  
                cout << "1";  
            else  
                cout << " + " << i;  
        }  
        cout << " = " << sum << endl;  
        sum = 0;  
    }  

    return 0;
}
